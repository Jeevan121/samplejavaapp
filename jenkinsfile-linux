pipeline {
    agent any
    
    stages {
        stage('compile') {
	   steps {
		git url: 'https://github.com/lerndevops/samplejavaapp.git'
		sh script: '/usr/share/maven/bin/mvn compile'
           }
        }
        stage('codereview-pmd') {
	   steps {
		sh script: '/usr/share/maven/bin/mvn -P metrics pmd:pmd'
           }
	   post {
               success {
                   pmd canComputeNew: false, defaultEncoding: '', healthy: '', pattern: '**/pmd.xml', unHealthy: ''
               }
           }		
        }
        stage('unit-test') {
	   steps {
		sh script: '/usr/share/maven/bin/mvn test'
           }
	   post {
               success {
                   junit 'target/surefire-reports/*.xml'
               }
           }			
        }
        stage('metric-check') {
	   steps {
		sh script: '/usr/share/maven/bin/mvn cobertura:cobertura -Dcobertura.report.format=xml'
           }
	   post {
               success {
	           cobertura autoUpdateHealth: false, autoUpdateStability: false, coberturaReportFile: 'target/site/cobertura/coverage.xml', conditionalCoverageTargets: '70, 0, 0', failUnhealthy: false, failUnstable: false, lineCoverageTargets: '80, 0, 0', maxNumberOfBuilds: 0, methodCoverageTargets: '80, 0, 0', onlyStable: false, sourceEncoding: 'ASCII', zoomCoverageChart: false                  
               }
           }		
        }
        stage('package') {
	   steps {
		sh script: '/usr/share/maven/bin/mvn clean package'	
           }		
        }
    }
}
